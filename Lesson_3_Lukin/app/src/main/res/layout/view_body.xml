<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/yellow_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:text="@string/personal_data"
        android:textColor="@color/color_primary_variant"
        android:textSize="16sp" />

    <include
        android:id="@+id/include1"
        layout="@layout/view_text" />

    <include
        android:id="@+id/include2"
        layout="@layout/view_text" />

    <include
        android:id="@+id/include3"
        layout="@layout/view_text" />

    <include
        android:id="@+id/include4"
        layout="@layout/view_text" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_with_icon1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:textColor="@color/my_gray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_with_icon2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_with_icon1"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/my_black"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/image_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/text_with_icon1"
            android:layout_alignBottom="@id/text_with_icon2"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:background="?selectableItemBackground"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_edit_black_24px" />

        <ImageButton
            android:id="@+id/image_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_with_icon2"
            android:layout_marginStart="20dp"
            android:layout_marginTop="38dp"
            android:layout_marginBottom="38dp"
            android:background="?selectableItemBackground"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_menu_exit" />

        <TextView
            android:id="@+id/text_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/image_button2"
            android:layout_alignBottom="@id/image_button2"
            android:layout_marginStart="32dp"
            android:layout_toEndOf="@id/image_button2"
            android:textColor="@color/my_black"
            android:textSize="18sp" />
    </RelativeLayout>
</LinearLayout>