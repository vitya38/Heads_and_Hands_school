<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:height="100dp"
        android:width="100dp">
        <shape android:shape ="rectangle">
            <solid android:color="#ffffff" />
            <padding
                android:right="40dp"
                android:bottom="40dp"
                />
        </shape>
    </item>
    <item
        android:height="60dp"
        android:width="60dp">
        <shape android:shape ="rectangle">
            <solid android:color="#ff0000" />
            <padding
                android:left="40dp"
                android:top="40dp"
                />
        </shape>
    </item>
    <item
        android:height="60dp"
        android:width="60dp">
        <shape android:shape="rectangle">
            <solid android:color="#00ff00"/>
            <padding
                android:right="40dp"
                android:bottom="40dp"
                />
        </shape>
    </item>
</layer-list>